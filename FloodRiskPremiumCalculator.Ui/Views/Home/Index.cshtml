@model FloodRiskPremiumCalculator.Ui.Models.StateViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@using (Html.BeginForm("Index", "Premium", FormMethod.Post))
{

    <div class="form-group">
        <label>States</label>
        @Html.DropDownListFor(model => model.SelectedState, Model.States, "Select State")
    </div>

    <div class="form-group">
        <label>Distance From Water</label>
        @Html.TextBoxFor(model => model.DistanceFromWater)
    </div>

    <div class="form-group">
        <input type="submit" value="Submit">
    </div>
}
